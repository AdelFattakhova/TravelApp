<Page x:Class="TravelApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelApp"
      mc:Ignorable="d" 
      d:DesignHeight="512" d:DesignWidth="775"
      Title="MainPage">

    <Grid Background="#FF5ACBCD">
        <Button x:Name="buttonList" Content="Список туров" HorizontalAlignment="Left" Margin="110,0,0,100" VerticalAlignment="Bottom" Width="225" Height="87" FontSize="20" Background="#FFE58E8E" Click="buttonList_Click" Foreground="#FF545599" FontWeight="Bold"/>
        <Button x:Name="buttonLogin" Content="Вход для владельца" HorizontalAlignment="Right" Margin="0,0,110.2,100" VerticalAlignment="Bottom" Width="225" Height="87" Click="buttonLogin_Click" FontSize="20" Background="#FFE58E8E" Foreground="#FF545599" FontWeight="Bold"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,141,0,0" TextWrapping="Wrap" Text="LET'S TRAVEL FROM RUSSIA" VerticalAlignment="Top" Height="51" Width="527" FontSize="36" FontFamily="Lucida Bright" FontWeight="Bold" Foreground="#FF545599"/>

    </Grid>
</Page>
