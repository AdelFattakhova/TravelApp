<Page x:Class="TravelApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelApp"
      mc:Ignorable="d" 
      d:DesignHeight="512" d:DesignWidth="775"
      Title="LoginPage" PreviewKeyDown="Page_PreviewKeyDown">

    <Grid Background="#FF5ACBCD">
        <TextBox x:Name="loginBox" Foreground="Gray" HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="279" FontSize="16" TextChanged="loginBox_TextChanged" GotFocus="loginBox_GotFocus" LostFocus="loginBox_LostFocus" Text="Логин"/>
        <TextBox x:Name="passwordBox" Foreground="Gray" HorizontalAlignment="Center" Margin="0,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="279" FontSize="16" GotFocus="passwordBox_GotFocus" LostFocus="passwordBox_LostFocus" Text="Пароль"/>
        <Button x:Name="buttonEnter" Content="Вход" HorizontalAlignment="Right" Margin="0,0,10,20" VerticalAlignment="Bottom" Height="25" Width="120" Click="buttonEnter_Click"/>
        <Button x:Name="buttonCancel" Content="Назад" HorizontalAlignment="Right" Margin="0,0,150,20" VerticalAlignment="Bottom" Height="25" Width="120" Click="buttonCancel_Click"/>
    </Grid>
</Page>
