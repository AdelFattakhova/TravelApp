<Page x:Class="TravelApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelApp"
      mc:Ignorable="d" 
      d:DesignHeight="511.213" d:DesignWidth="774.038"
      Title="LoginPage">

    <Grid Background="#FF5ACBCD">
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="25" Margin="131,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" FontSize="16" TextChanged="loginBox_TextChanged"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="131,126,0,0" VerticalAlignment="Top" Height="25" Width="279" FontSize="18"/>
        <TextBlock x:Name="textBlockLogin" HorizontalAlignment="Left" Margin="20,63,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Height="25" Width="111" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="textBlockPassword" HorizontalAlignment="Left" Margin="20,126,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Height="25" Width="111" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="buttonEnter" Content="Вход" HorizontalAlignment="Left" Margin="20 0 0 20" VerticalAlignment="Bottom" Width="144" Height="52" FontSize="18" Click="buttonEnter_Click"/>

    </Grid>
</Page>
