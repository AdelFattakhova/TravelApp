<Page x:Class="TravelApp.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelApp"
      mc:Ignorable="d" 
      d:DesignHeight="511.213" d:DesignWidth="774.038"
      Title="AddPage">

    <Grid Background="#FF5ACBCD">
        <TextBox x:Name="cityFromBox" HorizontalAlignment="Left" Height="23" Margin="53,55,0,0" TextWrapping="Wrap" Text="Откуда" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="cityToBox" HorizontalAlignment="Left" Height="23" Margin="328,55,0,0" TextWrapping="Wrap" Text="Куда" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="priceBox" HorizontalAlignment="Left" Height="23" Margin="53,116,0,0" TextWrapping="Wrap" Text="Цена" VerticalAlignment="Top" Width="120"/>
        <DatePicker HorizontalAlignment="Left" Margin="328,116,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="hotelBox" HorizontalAlignment="Left" Height="23" Margin="53,178,0,0" TextWrapping="Wrap" Text="Отель" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="roomPrice1Box" HorizontalAlignment="Left" Height="23" Margin="328,178,0,0" TextWrapping="Wrap" Text="Цена одноместного" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Добавить" HorizontalAlignment="Left" Margin="53,0,0,20" VerticalAlignment="Bottom" Width="120" Height="34" FontSize="14"/>
        <TextBox x:Name="roomPrice2Box" HorizontalAlignment="Left" Height="23" Margin="328,238,0,0" TextWrapping="Wrap" Text="Цена двухместного" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="roomPrice3Box" HorizontalAlignment="Left" Height="23" Margin="328,302,0,0" TextWrapping="Wrap" Text="Цена трехместного" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
